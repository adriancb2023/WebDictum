---
import Navbar from '../components/Navbar.astro';
import '../styles/global.css';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Righteous&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  </head>
  <body>
    <Navbar />
    <slot />
  </body>
</html>

<style is:global>
  /* Reset y configuraci√≥n base */
  * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
  }

  html {
      scroll-behavior: smooth;
  }

  body {
      font-family: 'Inter', sans-serif;
      background: #000000;
      color: #ffffff;
      overflow-x: hidden;
  }

  /* Custom properties and global styles for GTA VI aesthetic */
  :root {
    --gta-font-family: 'Righteous', cursive;
    --gta-blue: #00b0ff;
    --gta-purple: #ae00ff;
    --gta-red: #ff0000;
    --gta-yellow: #ffea00;
    --gta-gray-dark: #1a1a1a;
    --gta-gray-medium: #333333;
    --gta-gray-light: #cccccc;
  }

  .gta-title {
    font-family: var(--gta-font-family);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
  }

  /* Global Animations */
  @keyframes gradientShift {
      0%, 100% { background-position: 0% 50%; }
      25% { background-position: 100% 50%; }
      50% { background-position: 100% 100%; }
      75% { background-position: 0% 100%; }
  }

  @keyframes subtleMove {
      0%, 100% { 
          transform: translate(0, 0);
          opacity: 0.5;
      }
      50% { 
          transform: translate(-1%, -1%);
          opacity: 0.8;
      }
  }

  @keyframes neonPulse {
      0%, 100% {
          opacity: 0.3;
          box-shadow: 
              0 0 5px rgba(255, 107, 107, 0.3),
              0 0 10px rgba(78, 205, 196, 0.3),
              0 0 15px rgba(69, 183, 209, 0.3);
      }
      50% {
          opacity: 0.6;
          box-shadow: 
              0 0 10px rgba(255, 107, 107, 0.5),
              0 0 20px rgba(78, 205, 196, 0.5),
              0 0 30px rgba(69, 183, 209, 0.5);
      }
  }

  @keyframes float3D {
      0%, 100% {
          transform: rotateY(-5deg) rotateX(5deg) translateZ(20px) translateY(0px);
      }
      50% {
          transform: rotateY(-8deg) rotateX(8deg) translateZ(30px) translateY(-10px);
      }
  }

  @keyframes borderGlow {
      0%, 100% {
          opacity: 0.3;
          transform: scale(1);
      }
      50% {
          opacity: 0.6;
          transform: scale(1.02);
      }
  }

  @keyframes pulse {
      0%, 100% {
          transform: scale(1);
          box-shadow: 0 0 20px rgba(255, 107, 107, 0.3);
      }
      50% {
          transform: scale(1.05);
          box-shadow: 0 0 30px rgba(255, 107, 107, 0.5);
      }
  }

  @keyframes fadeInUp {
      from {
          opacity: 0;
          transform: translateY(20px);
      }
      to {
          opacity: 1;
          transform: translateY(0);
      }
  }

  @keyframes marquee {
      0% {
          transform: translateX(0);
      }
      100% {
          transform: translateX(-50%);
      }
  }

  @-webkit-keyframes marquee {
      0% {
          -webkit-transform: translateX(0);
      }
      100% {
          -webkit-transform: translateX(-50%);
      }
  }

  @-moz-keyframes marquee {
      0% {
          -moz-transform: translateX(0);
      }
      100% {
          -moz-transform: translateX(-50%);
      }
  }

  @-o-keyframes marquee {
      0% {
          -o-transform: translateX(0);
      }
      100% {
          -o-transform: translateX(-50%);
      }
  }

  @keyframes float3DMobile {
      0%, 100% {
          transform: rotateY(-3deg) rotateX(3deg) translateZ(10px) translateY(0px);
      }
      50% {
          transform: rotateY(-5deg) rotateX(5deg) translateZ(15px) translateY(-5px);
      }
  }

  @keyframes pulseGlow {
      0%, 100% {
          box-shadow: 0 0 20px rgba(78, 205, 196, 0.6);
      }
      50% {
          box-shadow: 0 0 30px rgba(78, 205, 196, 0.8);
      }
  }

  @keyframes fadeInOut {
      0%, 100% {
          opacity: 0.7;
      }
      50% {
          opacity: 1;
      }
  }

  @keyframes bounceArrow {
      0%, 20%, 50%, 80%, 100% {
          transform: rotate(45deg) translateY(0);
      }
      40% {
          transform: rotate(45deg) translateY(-10px);
      }
      60% {
          transform: rotate(45deg) translateY(-5px);
      }
  }

  /* Ensure important animations run */
  .title-main,
  .nav-logo span,
  .btn-login,
  .btn-login i,
  .download-section h2,
  .highlight-badge,
  .app-screenshot,
  .tech-marquee-track,
  .code-line {
      animation-play-state: running !important;
      -webkit-animation-play-state: running !important;
      -moz-animation-play-state: running !important;
      -o-animation-play-state: running !important;
  }

  /* Force specific animations */
  .title-main {
      animation: gradientShift 3s ease-in-out infinite !important;
      -webkit-animation: gradientShift 3s ease-in-out infinite !important;
      -moz-animation: gradientShift 3s ease-in-out infinite !important;
      -o-animation: gradientShift 3s ease-in-out infinite !important;
  }

  .nav-logo span {
      animation: gradientShift 3s ease-in-out infinite !important;
      -webkit-animation: gradientShift 3s ease-in-out infinite !important;
      -moz-animation: gradientShift 3s ease-in-out infinite !important;
      -o-animation: gradientShift 3s ease-in-out infinite !important;
  }

  .btn-login {
      animation: gradientShift 3s ease-in-out infinite !important;
      -webkit-animation: gradientShift 3s ease-in-out infinite !important;
      -moz-animation: gradientShift 3s ease-in-out infinite !important;
      -o-animation: gradientShift 3s ease-in-out infinite !important;
  }

  .btn-login i {
      animation: gradientShift 3s ease-in-out infinite !important;
      -webkit-animation: gradientShift 3s ease-in-out infinite !important;
      -moz-animation: gradientShift 3s ease-in-out infinite !important;
      -o-animation: gradientShift 3s ease-in-out infinite !important;
  }

  .download-section h2 {
      animation: gradientShift 3s ease-in-out infinite !important;
      -webkit-animation: gradientShift 3s ease-in-out infinite !important;
      -moz-animation: gradientShift 3s ease-in-out infinite !important;
      -o-animation: gradientShift 3s ease-in-out infinite !important;
  }

  .highlight-badge {
      animation: pulse 2s ease-in-out infinite !important;
      -webkit-animation: pulse 2s ease-in-out infinite !important;
      -moz-animation: pulse 2s ease-in-out infinite !important;
      -o-animation: pulse 2s ease-in-out infinite !important;
  }

  .app-screenshot {
      animation: float3D 4s ease-in-out infinite !important;
      -webkit-animation: float3D 4s ease-in-out infinite !important;
      -moz-animation: float3D 4s ease-in-out infinite !important;
      -o-animation: float3D 4s ease-in-out infinite !important;
  }

  .tech-marquee-track {
      animation: marquee 30s linear infinite !important;
      -webkit-animation: marquee 30s linear infinite !important;
      -moz-animation: marquee 30s linear infinite !important;
      -o-animation: marquee 30s linear infinite !important;
  }

  .code-line {
      animation: fadeInUp 0.5s ease forwards !important;
      -webkit-animation: fadeInUp 0.5s ease forwards !important;
      -moz-animation: fadeInUp 0.5s ease forwards !important;
      -o-animation: fadeInUp 0.5s ease forwards !important;
  }
</style> 